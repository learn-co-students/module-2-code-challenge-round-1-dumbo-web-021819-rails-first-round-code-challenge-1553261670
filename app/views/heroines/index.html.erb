<h2>All Heroines</h2>

<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTUjX8Ehgw6ScpVn_t6C9OrREnFSabLnTDzsXVf8LajT6EA6FSF" alt="Flowers in Chania">
<ul>
  <%= link_to "Add New Heroine!", new_heroine_path %><br>
  <br>

  <% power_list = @powers.map do |power| %>
    <% power.name.titleize %>
  <% end %>
  Find Heroines By Power: <%= power_list %>
  <%= form_tag(heroines_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag("Search") %>
  <% end %>



  <% @heroines.each do |heroine| %>
    <br>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>
