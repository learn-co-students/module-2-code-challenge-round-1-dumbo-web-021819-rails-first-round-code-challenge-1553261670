<h1>Add New Heroine</h1>
<% if @heroine.errors.any? %>
  <% @heroine.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<%= form_for @heroine do |f| %>
<ul>
  <li>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />
  </li>
  <li>
  <%= f.label :super_name %>:
  <%= f.text_field :super_name %>
  </li><br>
  <%= f.collection_select :power_id, Power.all, :id, :name %>

  <%= f.submit %>
<% end %>
</ul>
