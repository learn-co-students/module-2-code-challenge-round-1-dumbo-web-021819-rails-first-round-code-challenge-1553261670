<h1> New Hero Form </h1>

<ul>
  <% @heroine.errors.full_messages.each do |msg| %>
  <li style="color: red">
    <%= msg %>
  </li>
  <% end %>
</ul>

<%= form_for @heroine do |f| %>

<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :super_name %>
<%= f.text_field :super_name %><br>

<%= f.label :power_id %>
<%= f.collection_select :power_id, Power.all, :id, :name, {prompt: "Select your Power"} %><br>

<%= f.submit %>
<% end %>
