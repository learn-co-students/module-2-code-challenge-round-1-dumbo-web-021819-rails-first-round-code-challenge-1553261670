<h1> Create a heroine! </h1>

<% if @heroine.errors.full_messages.any? %>
  <ul>
    <% @heroine.errors.full_messages.each do |e| %>
    <li> <%= e %> </li>
    <%end%>
  </ul>
<% end %>

<%= form_with model: @heroine do |h| %>
<%= h.label :name %><br>
<%= h.text_field :name %><br>
<%= h.label :super_name%><br>
<%= h.text_field :super_name%><br>

<%= h.collection_select :power_id, Power.all, :id, :name %>
<%= h.submit "Excelsior!" %>
<% end %>
